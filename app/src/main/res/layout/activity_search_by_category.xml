<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".AdminChooseByCategoryActivity"
android:orientation="vertical"
android:background="@color/white"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:weightSum="2"
    android:background="@color/colorAccent"
    android:layout_height="43dp">

    <TextView
        android:id="@+id/search_by_category_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/choose_a_category_to_find"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>
</LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:weightSum="3"
    android:layout_marginTop="20dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:weightSum="3"

        >

        <ImageView
            android:id="@+id/search_by_category_comps"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/comps"
            android:layout_weight="1"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/computers"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/search_by_category_appliances"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/electronics1"
            android:layout_weight="1"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appliances"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/search_by_category_phones"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/smartphone"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smartphones"
            android:layout_marginTop="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:gravity="center"
        android:layout_weight="1"
        android:weightSum="3"
        >

        <ImageView
            android:id="@+id/search_by_category_clothes"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/shirt_color"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clothes"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/search_by_category_toys"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/toys_color"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toys"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/search_by_category_sport"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/sport_color"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sport_equipment"
            android:layout_marginTop="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="3"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/search_by_category_food"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/groceries"
            android:layout_marginTop="10dp"
            tools:ignore="NestedWeights" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/food"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/search_by_category_fruits"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/market"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fresh_marker"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/search_by_category_pets"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/pet_color"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/for_pets"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</LinearLayout>


</LinearLayout></ScrollView>
