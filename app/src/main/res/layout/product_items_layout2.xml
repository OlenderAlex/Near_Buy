<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="3dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardElevation="15dp"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/rel_cardView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/product_image_cardView2"
            android:layout_width="200dp"
            android:layout_height="150dp"
            />
        <TextView
            android:id="@+id/product_name_cardView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_name"
            android:layout_toEndOf="@+id/product_image_cardView2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="3dp"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/product_price_cardView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/product_image_cardView2"
            android:layout_below="@+id/product_name_cardView2"
            android:layout_marginStart="20dp"
            android:text="@string/product_price"
            android:textSize="20sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/favorite_empty_cardView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/favorite_empty"
            android:layout_alignParentEnd="true"
             android:layout_alignParentBottom="true"
            android:contentDescription="@string/todo"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true" />
        <ImageView
            android:id="@+id/favorite_filled_cardView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
           android:layout_alignParentBottom="true"
            android:contentDescription="@string/todo"
            android:src="@drawable/favorite_filled"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>