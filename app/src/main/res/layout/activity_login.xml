<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo_icon_nearbuy"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/todo" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/login"
        android:textSize="18sp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <View
            style="@style/Divider.Horizontal"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"/>




        <View
            android:layout_marginStart="20dp"
            style="@style/Divider.Horizontal"
            android:layout_gravity="center"
            android:layout_weight="1" />

    </LinearLayout>



    <EditText
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/phone_number_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint= "@string/phone_number_or_login"
        android:inputType="text"
        android:background="@drawable/inputs_design"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:importantForAutofill="no" tools:targetApi="o"/>

    <View
        style="@style/Divider.Horizontal"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="3dp"
        />

    <EditText
        android:id="@+id/pass_et_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inputs_design"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorPrimary"
        android:hint="@string/password"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:textSize="20sp"
        tools:targetApi="o" />
    <View
        style="@style/Divider.Horizontal"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="3dp"
        />
    <CheckBox
        android:id="@+id/login_remember_me_chkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remember_me"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_accent"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="18sp" />



    <TextView
        android:id="@+id/forgot_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:text="@string/forgot_password"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"/>



    <!--horizontal line-->

    <View
        style="@style/Divider.Horizontal"
        android:layout_marginTop="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_margin="25dp">
        <TextView
            android:id="@+id/tv_login_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/return_to_user_login"
            android:textSize="21sp"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_login_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="@string/admin"
        android:textSize="21sp"
        android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>
</LinearLayout>

