<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".User.FavoriteProductsActivity"
    >
    <RelativeLayout
        android:id="@+id/rel_layout_favorite"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:layout_height="43dp">

        <TextView
            android:id="@+id/cart_your_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            android:text="@string/favorite_products"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp" />


    </RelativeLayout>
    <View
        android:background="@color/grey"
        style="@style/Divider.Horizontal"
        android:layout_marginTop="45dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel_layout_favorite"
        android:layout_above="@+id/next_process_btn"
        />
</RelativeLayout>