<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminHomeActivity"
    android:orientation="vertical">

    <LinearLayout
         android:layout_width="match_parent"
        android:weightSum="2"
        android:background="@color/white"
         android:layout_height="43dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/add_new_product_category_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/manager"
        android:textAlignment="center"
        android:textColor="@color/darkBlue"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginStart="50dp"/>

    <Button
        android:id="@+id/logout_btn_admin_home"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:background="@drawable/logout_img"
        android:textColor="@color/colorPrimaryDark"
        />
    </LinearLayout>
    <View
        android:background="@color/grey"
        style="@style/Divider.Horizontal"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/manage_orders"
        android:textColor="@color/darkGrey"
        android:textSize="19sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"/>
    <LinearLayout
        android:id="@+id/layout_new_orders_admin"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@drawable/background"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/admin_new_orders"
            android:contentDescription="@string/todo"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@color/darkBlue"
            android:layout_gravity="center"
            android:text="@string/new_orders1"
            android:textSize="18sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_waiting_for_shipping_admin"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/background"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ready_to_ship"
            android:contentDescription="@string/todo"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:text="@string/waiting_for_shipment"
            android:textColor="@color/darkBlue"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_shipped_orders_admin"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/background"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/track_shipping_24"
            android:contentDescription="@string/todo"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:text="@string/shipped_orders"
            android:textColor="@color/darkBlue"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_delivered_orders_admin"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/background"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/order_shipped"
            android:contentDescription="@string/todo"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:text="Delivered orders"
            android:textColor="@color/darkBlue"
            android:textSize="18sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/manage_products"
        android:textColor="@color/darkGrey"
        android:textSize="19sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"/>
    <LinearLayout
        android:id="@+id/layout_manage_products_admin"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/background"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit_admin"
            android:contentDescription="@string/todo"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_products"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:textColor="@color/darkBlue"
            android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_add_new_products_admin"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/background"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_new_addmin"
            android:contentDescription="@string/todo"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:text="@string/add_new_product1"
            android:textColor="@color/darkBlue"
            android:textSize="18sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/owner_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Owner"
        android:textColor="@color/darkGrey"
        android:textSize="19sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:visibility="gone"/>



    <LinearLayout
        android:id="@+id/layout_owner_register_new_admin"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="43dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:background="@drawable/background"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/reg_new_admin"
            android:contentDescription="@string/todo"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:text="@string/create_new_admin_account"
            android:textColor="@color/darkBlue"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_owner_delete_admin"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/background"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_delete_24"
            android:contentDescription="@string/todo"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:text="@string/delete_admin_account1"
            android:textColor="@color/darkBlue"
            android:textSize="18sp"/>
    </LinearLayout>


</LinearLayout>